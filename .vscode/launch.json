{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [

        {
            "name": "(gdb) CuraEngine",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/CuraEngine",
            // "args" : [
            // ],
            "args": ["slice",
                "-v",
                "-j",
                "~/Programming/Cura/resources/definitions/cylindrical_zaribo.def.json",
                "-j",
                "~/Programming/Cura/resources/extruders/prusa_i3_mk2_extruder_0.def.json",
                "-o",
                "${workspaceFolder}/output/test.gcode",
                "-s",
                "drum_radius=22.040",
                "-s",
                "drum_coordinate_x=0",
                "-s",
                "drum_coordinate_z=0",
                "-s",
                "seam_front=39267",
                "-s",
                "seam_back=39267",
                "-s",
                "machine_center_is_zero=true",
                "-s",
                "adhesion_type=none",
                "-s",
                "layer_height=0.2",
                // "-s",
                // "zig_zaggify_infill=true",
                // notably zig-zaggify w/ lines produces better results than just zigzag pattern
                "-s",
                "infill_pattern=zigzag",
                "-s",
                "infill_line_distance=4",
                "-s",
                "top_bottom_pattern=concentric",
                "-s",
                "top_bottom_pattern_0=concentric",
                "-s",
                "top_layers=4",
                "-s",
                "bottom_layers=4",
                "-s",
                "magic_spiralize=false",
                "-s",
                "wall_line_count=2",
                "-s",
                "speed_travel=20",
                "-s",
                "speed_wall_x=20",
                "-s",
                "speed_wall_0=20",
                "-s",
                "speed_travel_layer_0=20",
                "-s",
                "speed_print_layer_0=20",
                "-s",
                "speed_suppot_infill=20",
                "-s",
                "speed_topbottom=20",
                "-s",
                "meshfix_keep_open_polygons=true",
                "-l",
                "~/Downloads/spring7.stl",
                ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [{"name":"CURA_ENGINE_SEARCH_PATH","value":"/usr/local/src/Cura/resources/definitions:/usr/local/src/Cura/resources/extruders"}],
            "externalConsole": true,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}